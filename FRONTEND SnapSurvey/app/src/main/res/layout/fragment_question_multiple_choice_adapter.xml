<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:background="@drawable/gradient_bg"
android:layout_width="match_parent"
android:layout_height="200dp"
tools:context=".QuestionMultipleChoice">


    <TextView
        android:id="@+id/questionMultipleTextView"
        android:layout_width="326dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="Question"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMultipleChoice"
        android:layout_width="325dp"
        android:layout_height="139dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/questionMultipleTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/questionMultipleTextView"
        app:layout_constraintTop_toBottomOf="@+id/questionMultipleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>